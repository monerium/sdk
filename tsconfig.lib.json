{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "outDir": "../../dist/out-tsc",
    "declaration": true,
    "types": ["node", "vite/client"],
  },
  "include": ["src/**/*.ts", "src/**/*.js", "test/**/*.js", "test/**/*.ts"],
  "exclude": ["jest.config.ts", "src/**/*.spec.ts", "src/**/*.test.ts"]
}
