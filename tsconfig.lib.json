{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "types": ["node", "vite/client"],
  },
  "include": ["src/**/**"],
  "exclude": ["jest.config.ts", "src/**/*.spec.ts", "src/**/*.test.ts"]
}
